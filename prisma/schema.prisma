generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

model Profile {
  id String @id

  handle         String  @unique
  firstName      String
  lastName       String
  profileImage   String?
  socialProfiles Json    @default("[]")

  titles Title[]
  posts  Post[]

  @@map("profiles")
}

model Title {
  id     String @id @default(cuid())
  user   String
  prompt String
  title  String

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  profile Profile @relation(fields: [user], references: [id])

  @@map("titles")
}

model Post {
  id         String @id @default(cuid())
  user       String
  contentUrl String
  title      String

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  profile Profile @relation(fields: [user], references: [id])

  @@map("posts")
}
