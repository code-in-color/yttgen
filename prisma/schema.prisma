generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

model Profile {
  id String @id

  generatedTitles GeneratedTitle[]
  handle          String           @unique
  firstName       String
  lastName        String
  profileImage    String?
  posts  Post[]

  @@map("profiles")
}

model GeneratedTitle {
  id     String @id @default(cuid())
  user   String
  prompt String
  title  String

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  profile Profile @relation(fields: [user], references: [id])

  @@map("generated_titles")
  @@map("titles")
}

model Post {
  id         String @id @default(cuid())
  user       String
  contentUrl String
  title      String

  createdAt DateTime  @default(now())
  updatedAt DateTime?

  profile Profile @relation(fields: [user], references: [id])

  @@map("posts")
}
